async function getRecentBooks() {
  try {
    const books = await prisma.book.findMany({
      take: 6,
      orderBy: { createdAt: 'desc' },
      select: {
        id: true,
        title: true,
        cover: true,
      },
    });
    return books;
  } catch (error) {
    console.error('Error fetching books:', error);
    return [];
  }
}

